<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#101114"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#101114">

        <ImageView
            android:id="@+id/ImageChampion"
            android:layout_width="85dp"
            android:layout_height="92dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/champion_aatrox" />

        <TextView
            android:id="@+id/ChampionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="8dp"
            android:layout_toEndOf="@+id/ImageChampion"
            android:layout_alignTop="@+id/ImageChampion"
            android:text="Name"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ChampionLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChampionName"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/ImageChampion"
            android:text="Champion Level" />

        <TextView
            android:id="@+id/PointsUntilNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChampionLevel"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/ImageChampion"
            android:text="Points Until Next Level" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
