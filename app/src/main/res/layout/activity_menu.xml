<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:background="#101114"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="412dp"
        android:layout_height="222dp"
        android:scaleType="centerCrop"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonAccueil"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:text="Rechercher un utilisateur"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuImage"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAccueil" />

    <Button
        android:id="@+id/buttonProfil"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif"
        android:text="Profil"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:text="Historique des parties"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRotation"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonRotation"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:text="Rotation des champions"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfil"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
