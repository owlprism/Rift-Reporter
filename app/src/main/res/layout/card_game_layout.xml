<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardImageHistorique"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101114"

        tools:ignore="MissingClass">

        <ImageView
            android:id="@+id/championImageView"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/round_image_background"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:scaleType="centerCrop"
            android:shape="ring"
            android:src="@drawable/champion_aatrox"
            app:cardCornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="89dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="40dp"
            android:text="Score: 0/0/0"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/championImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="100dp"
            android:layout_height="21dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="40dp"
            android:text="Duration: 00:00"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/typeTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="89dp"
            android:layout_height="19dp"
            android:layout_marginEnd="20dp"
            android:text="Type: Normal"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/victoryTextView" />

        <TextView
            android:id="@+id/victoryTextView"
            android:layout_width="97dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:text="Victory"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separator6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#808080"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/championImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
